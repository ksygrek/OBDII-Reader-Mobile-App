                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/view2"
                />
            <TextView
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/long_term_fuel_trim_bank_1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/sbank1View"
                />
            <TextView
                android:id="@+id/lbank1View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/view3"
                />
            <TextView
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/short_term_fuel_trim_bank_2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/lbank1View"
                />
            <TextView
                android:id="@+id/sbank2View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/view4"
                />
            <TextView
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/long_term_fuel_trim_bank_2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/sbank2View"
                />
            <TextView
                android:id="@+id/lbank2View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
