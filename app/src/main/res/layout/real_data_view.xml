                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/view5"
                />
            <TextView
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
