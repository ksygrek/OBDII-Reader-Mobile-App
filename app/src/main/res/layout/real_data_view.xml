                    android:layout_below="@+id/mafView"
                    />
                <TextView
                    android:id="@+id/intakeAirTempTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_below="@+id/view1b"
                    />
            <TextView
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/short_term_fuel_trim_bank_1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/intakeAirTempTextView"
                />
            <TextView
                android:id="@+id/sbank1View"
                android:layout_width="match_parent"
